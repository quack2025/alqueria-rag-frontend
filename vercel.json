{
  "functions": {
    "api/*.js": {
      "runtime": "nodejs20.x",
      "maxDuration": 30
    }
  },
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/:path*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "CLAUDE_API_KEY": "@claude_api_key",
    "VITE_API_URL": "@vite_api_url"
  },
  "build": {
    "env": {
      "VITE_API_URL": "https://alqueria-rag-backend-production.up.railway.app",
      "VITE_USE_VERCEL_FUNCTIONS": "true"
    }
  }
}